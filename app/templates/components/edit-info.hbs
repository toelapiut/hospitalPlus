      <label for="id">Examiner</label> {{textarea value=examiner id='examiner' class="form-control"}}
    </div>

    <div class=form-group>
      <label for="id">Follow Up</label> {{input value=followUp id="followUp" class="form-control"}}
    </div>

    <div class=form-group>
      <label for="id">Status</label> {{textarea value=status id="status" class="form-control"}}
    </div>
    <button class="btn btn-primary " {{action 'updateForm' patientInfo}}> Update</button>
