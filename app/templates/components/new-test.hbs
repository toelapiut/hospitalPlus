{{#if addNewTest}}
  <h1>New Test</h1>
  <div>
    <form>
      <div class="co-md-6">
        <label for="owner">Patient</label>
        {{input value=patient id="patient"}}
      </div>

      <div class="col-md-4">
        <label for="type">Test</label>
        {{input value=test id="test"}}
      </div>

      <div class="col-md-6">
        <label for="comment">Doctors Comment</label>
        {{input value=comment id="comment"}}
      </div>

      <div class="col-md-2">
        <label for="nextvisit">Next Visit</label>
        {{input value=nextvisit}}
      </div>



      <button {{action 'saveNewTest'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'labTestShow'}}>New Test</button>
{{/if}}
