{{#if addMedication}}
  <h1>Medicine Supply</h1>

  <div>
    <form>
      <div class="form-group">
        <label for="medication">Medication:</label> {{input value=medication id="medication"}}
      </div>
      <div class="form-group">
        <label for="prescriber">Prescriber:</label> {{input value=prescriber id="prescriber"}}
      </div>
      <div class="form-group">
        <label for="prescription">Prescription:</label> {{input value=presciption id="prescription"}}
      </div>
      <div class="form-group">
        <label for="date">Date of Prescription:</label> {{input value=date id="date"}}
      </div>
      <div class="form-group">
        <label for="quantityRequested">Quantity Needed</label> {{input value=quantityRequested id="quantityRequested"}}
      </div>
      <button class="btn btn-success" {{action 'saveMedication'}}>Add To Receipt</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-info" {{action 'drugsFormShow'}}>Prescribe Medicine</button>
{{/if}}
