{{#if updatePatient}}

<h1>Edit info concerning: {{patientdisplay.firstName}} {{patientdisplay.lastName}}</h1>
<div class="container">


  <form>

    <div class="row">
      <div class="col-md-4">
    <div class="form-group ">
      <label for="location">Location</label> {{input value=location id="location" class="form-control"}}
    </div>
  </div>
  <div class="col-md-4">
    <div class="form-group">
      <label for="phoneNo">Phones Number</label> {{input value=phoneNo id='phoneNo' class="form-control" type="number"}}
    </div>
  </div>
  <div class="col-md-4">
    <div class="form-group">
      <label for="emergencyNo">emergency Number</label> {{input value=emergencyNo id='emergencyNo' class="form-control" type="number"}}
    </div>
  </div>
  </div>
  <div class="row">
    <div class="col-md-6">
    <div class="form-group">
      <label for="followUp">Follow Up</label> {{textarea value=followUp id="followUp" class="form-control"}}
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <label for="status">Status</label> {{textarea value=status id="status" class="form-control"}}
    </div>
  </div>
</div>
  <div class="row">
    <div class="form-group">
      <div class="col-md-12">
      <label for="examiner">Examiner</label> {{input value=examiner id='examiner' class="form-control"}}
    </div>
  </div>
  </div>
  <button class="medButton" {{action 'update' patientdisplay}}>Save</button>
  </form>
</div>
{{else}}
<div class="container">
<button class="medButton" {{action 'updatePatient'}}>Edit Patient</button>
</div>
{{/if}}
