{{#if updatePatient}}

<div class="container">
<h4>Update Patient's Info: {{patientdisplay.firstName}} {{patientdisplay.lastName}}</h4>

  <form>
    <div class="row">
      <div class="col-md-4">
    <div class="form-group ">
      <label for="id">Location</label> {{input value=location id="location" class="form-control"}}
    </div>
  </div>
  <div class="col-md-4">
    <div class="form-group">
      <label for="lastName">Surname:</label> {{input value=lastName id="lastName" class="form-control"}}
    </div>
  </div>
  <div class="col-md-4">
    <div class="form-group">
      <label for="id">emergency Number</label> {{input value=emergencyNo id='emergencyNo' class="form-control" type="number"}}
    </div>
    <div class="form-group">
      <label for="dob">Date of Birth:</label> {{input value=dob id="dob" class="form-control"}}
    </div>
    <div class=form-group>
      <label for="patientsId">patients ID</label> {{input value=patientsId id='patientsId' class="form-control"}}
    </div>
    <div class=form-group>
      <label for="id">Location</label> {{input value=location id="location" class="form-control"}}
    </div>
    <div class=form-group>
      <label for="id">Gender</label> {{input value=sex id="sex" class="form-control"}}
    </div>
    <div class=form-group>
      <label for="id">Phone Number</label> {{input value=phoneNo id='phoneNo' class="form-control" type="date"}}
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
    <div class="form-group">
      <label for="id">Follow Up</label> {{textarea value=followUp id="followUp" class="form-control"}}
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <label for="id">Status</label> {{textarea value=status id="status" class="form-control"}}
    </div>
  </div>
</div>
  <div class="row">
    <div class="form-group">
      <div class="col-md-12">
      <label for="id">Examiner</label> {{input value=examiner id='examiner' class="form-control"}}
    </div>
  </div>
  </div>
  <button class="btn btn-info" {{action 'update' patientdisplay}}>Save</button>
  </form>
</div>
{{else}}
<div class="container">
<button class="btn btn-success" {{action 'updatePatient'}}>Edit Patient Info</button>
</div>
{{/if}}
