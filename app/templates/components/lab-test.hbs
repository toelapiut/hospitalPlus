<div class="container" id="conta">
  <form>
    <h1>Lab Request</h1>
    <div class="row">
      <div class="col-md-4">
        <div class=form-group>
          <label for="date">Date </label> {{input type="date" class="form-control" id="dateRequested" value=dateRequested }}
        </div>
      </div>
      <div class="col-md-3">
        <div class=form-group>
          <label for="patientName">Patient Name</label> {{input type="text" class="form-control" id="patientName" value=patientName }}
        </div>
      </div>
      <div class="col-md-3">
        <div class=form-group>
          <label for="requestedBy"> Requested By</label> {{input type="text" class="form-control" id="requestedBy" value=requestedBy }}
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <div class=form-group>
          <label for="labType">Lab Type</label> {{textarea id="labType" value=labType class="form-control"}}
        </div>
      </div>
      <div class="col-md-4">
        <div class=form-group>
          <label for="testResult">Test Result</label> {{textarea id="testResult" value=testResult class="form-control"}}
        </div>
      </div>
      <div class="col-md-4">
        <div class=form-group>
          <label for="labNote">Lab Note</label> {{textarea id="labNote" value=labNote class="form-control"}}
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2 btn-labinfo">
        <button class="btn btn-success" {{action 'labInfos'}}>Add Infomation</button>
      </div>
      <div class="col-md-2 btn-labinfo">
        <button class="btn btn-danger" {{action 'erase' labInfos}}>Erase Data</button>
      </div>
    </div>
  </form>
</div>