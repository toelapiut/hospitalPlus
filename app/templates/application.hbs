{{#burger-menu as |burger|}}
  {{#burger.menu itemTagName="li" as |menu|}}
    <i class="fa fa-times" aria-hidden="true" {{action burger.state.actions.close}}></i>

    <ul>
      {{#menu.item}}
        {{link-to 'Home' 'index'}}
      {{/menu.item}}

      {{#menu.item}}
        {{link-to '+ Patient ' 'new-patient'}}
      {{/menu.item}}

    </ul>
  {{/burger.menu}}

  {{#burger.outlet}}
  <a class="hamburger {{burger.state.position}} {{if burger.state.open 'burger-hidden'}}" {{action burger.state.actions.toggle}}>
   <i class="fa fa-bars" aria-hidden="true"></i>
 </a>
    {{outlet}}
  {{/burger.outlet}}
{{/burger-menu}}
