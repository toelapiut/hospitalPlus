<div class="container ">
  <div class='addpatient'>
    <div class='floater'>
     <div class="btn btn--border btn--primary btn--animated"><img src="image/favicon.ico"><span class="patientbtn">{{#link-to 'new-Patient' new-patient}}Patient{{/link-to}}</span></div>
    </div>
  </div>
</div>

<div class="container" id="main">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Patients ID</th>

        <th>First Name</th>

        <th>Last Name</th>

        <th>Gender</th>

        <th>D.O.B</th>

        <th>phone No.</th>

        <th>Emergency No.</th>

        <th>Check Out Time.</th>

        <th>Check In Time.</th>

        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      {{#each model.patientdisplays as |patientdisplay|}}


        <tr>
          <td>{{patientdisplay.patientsId}}</td>

          <td>{{patientdisplay.firstName}}</td>

          <td>{{patientdisplay.lastName}}</td>

          <td>{{patientdisplay.sex}}</td>

          <td>{{patientdisplay.dob}}</td>

          <td>{{patientdisplay.phoneNo}}</td>

          <td>{{patientdisplay.emergencyNo}}</td>

          <td>{{patientdisplay.checkOuttime}}</td>

          <td>{{patientdisplay.checkIntime}}</td>

          <td> {{patientdisplay.status}}</td>

          <div class="btn btn--border btn--primary btn--animated">Edit</div>
        </tr>
      {{/each}}

    </tbody>
  </table>
</div>
